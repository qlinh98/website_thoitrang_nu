<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Đăng mật khẩu</h2>
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <%= f.hidden_field :reset_password_token %>

                    <div class="group-input">
                        <%= f.label :password, "Mật khẩu mới" %><br />
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                        <% end %>
                        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Nhập mật khẩu của bạn" %>
                    </div>

                    <div class="group-input">
                        <%= f.label :password_confirmation, "Xác thực lại mật khẩu" %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Nhập lại mật khẩu của bạn" %>
                    </div>

                    <div class="actions">
                        <%= f.submit "Change my password", class: "site-btn login-btn" %>
                    </div>
                    <% end %>
                    <div class="switch-login">
                        <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->