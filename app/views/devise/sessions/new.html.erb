<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Đăng nhập</h2>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="group-input">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Nhập email của bạn" %>
                    </div>
                    <div class="group-input">
                        <%= f.label "Mật khẩu" %><br />
                        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Nhập mật khẩu của bạn" %>
                    </div>
                    <% if devise_mapping.rememberable? %>
                    <div>
                        <label style="word-wrap:break-word" >
                            <%= f.check_box :remember_me %> Nhớ mật khẩu.
                        </label>
                       
                    </div>
                    <% end %>

                    <div class="actions">
                        <%= f.submit "Đăng nhập", class: "site-btn login-btn"%>
                    </div>
                    <% end %>
                    <div class="switch-login">
                        <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->