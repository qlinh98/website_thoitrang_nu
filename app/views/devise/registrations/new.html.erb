<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Đăng ký</h2>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="group-input">
                        <%= f.label :email, "Email" %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Nhập email của bạn" %>
                    </div>

                    <div class="group-input">
                        <%= f.label :password, "Mật khẩu" %>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Nhập mật khẩu của bạn" %>
                    </div>

                     <div class="group-input">
                        <%= f.label :password_confirmation, "Xác thực mật khẩu" %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Nhập lại mật khẩu của bạn" %>
                    </div>

                    <div class="actions">
                       <%= f.submit "Đăng ký", class: "site-btn login-btn"%>
                    </div>
                    <% end %>
                    <div class="switch-login">
                       <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->